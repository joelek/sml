{
	"bin": {},
	"devDependencies": {
		"@types/node": "^14",
		"typescript": "^4"
	},
	"dependencies": {
		"@joelek/ts-autoguard": "github:joelek/ts-autoguard#semver:^4"
	},
	"license": "UNLICENSED",
	"main": "./build/server/server.js",
	"name": "@joelek/sml",
	"repository": {
		"type": "git",
		"url": "https://github.com/joelek/sml.git"
	},
	"scripts": {
		"build": "npm run generate && npm run compile && npm run bundle",
		"bundle": "cp ./build/client/client.js ./public/client.js && cp ./build/service/service.js ./public/service.js",
		"clean": "rm -rf ./build/ ./node_modules/",
		"compile": "npx tsc -b",
		"generate": "npx autoguard --standalone=false",
		"preversion": "npm run build && git add ./",
		"postversion": "git push && git push --tags"
	},
	"version": "0.0.0"
}
